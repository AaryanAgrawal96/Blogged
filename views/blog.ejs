<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/scripts.ejs") %> <%-
    include("./partials/navbar.ejs") %>

    <!-- Blog content -->
    <div class="container">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverUrl %>" width="400px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <!-- Blog author -->
    <div class="container mt-4">
      <img
        src="<%= blog.createdBy?.pfpUrl || '/images/default.png' %>"
        width="50px"
      />
      <%= blog.createdBy?.username || "Deleted user" %>
    </div>

    <!-- Comments section -->
    <div class="container mt-4">
      <h1>Comments (<%= comments.length %>)</h1>

      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mt-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Leave a comment"
          />
          <button class="btn btn-primary mt-3 mb-3" type="submit">
            Comment
          </button>
        </div>
      </form>
      <% } %>

      <!-- Existing comments -->
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="mb-3">
          <img
            src="<%= comment.createdBy?.pfpUrl || '/images/default.png' %>"
            width="50px"
          />
          <strong>
            <%= comment.createdBy?.username || "Deleted user" %>
          </strong>
          <pre><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
